{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('security') }}
{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1>Big Bill</h1>
        </div>
    </div>
    <div class="row align-items-center justify-content-center">
        <div class="col-md-6 col-md-offset-4">
            <div class="form-card card">
                <div class="card-body">
                    <div class="text-center">
                        <img src="{{ asset('build/img/' ~ icon ~ '.svg') }}" alt="car-key">
                        <h2 class="text-center pt-3 pb-3">{{ title }}</h2>
                        {% block form %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('securityjs') }}
{% endblock %}
